{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	},
	"importMap": "./import_map.json",
	"lint": {
		"files": {
			"include": ["./"],
			"exclude": ["./tests/"]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"]
		}
	},
	"fmt": {
		"files": {
			"include": ["./"],
			"exclude": ["./tests/"]
		},
		"options": {
			"useTabs": false,
			"lineWidth": 80,
			"indentWidth": 2,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
